{
    "name": "vendocrat/laravel-translatable",
    "description": "A simple Package for multi-lingual Models in Laravel 5.",
    "homepage" : "https://github.com/vendocrat/laravel-translatable",
    "license": "MIT",
    "keywords": [
        "translatable",
        "translation",
        "localization",
        "language",
        "multilingual",
        "laravel"
    ],
    "authors": [
        {
            "name"     : "Alexander Manfred Poellmann",
            "homepage" : "http://twitter.com/AMPoellmann",
            "role"     : "developer"
        }
    ],
    "require": {
        "php"                 : ">=5.6.4|^7.0",
        "illuminate/support"  : ">=5.3",
        "illuminate/database" : ">=5.3"
    },
    "require-dev": {
        "laravel/framework" : "5.3.*",
        "mockery/mockery" : "0.9.*",
        "phpunit/phpunit" : "^6.0",
        "doctrine/dbal"   : "2.5.x"
    },
    "autoload": {
        "psr-4": {
            "vendocrat\\Translatable\\" : "src/"
        }
    },
    "extra": {
        "branch-alias" : {
            "dev-master" : "0.0.x-dev"
        }
    },
    "support" : {
        "source" : "https://github.com/AlexanderPoellmann/laravel-translatable",
        "issues" : "https://github.com/AlexanderPoellmann/laravel-translatable/issues"
    }
}
